    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "github": {
      "command": "github-mcp-server",
      "args": ["stdio"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:githubToken}"
      }
    },
    "mcp-google-cse": {
      "command": "uvx",
      "args": ["mcp-google-cse"],
      "env": {
        "API_KEY": "${input:googleSearchApiKey}",
        "ENGINE_ID": "${input:googleSearchEngineID}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "${input:memoryFilePath}"
      }
    },
    "nixos": {
      "command": "mcp-nixos"
    },
