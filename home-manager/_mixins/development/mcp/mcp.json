{
  "servers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${input:context7ApiKey}"
      }
    },
    "docfork": {
      "type": "http",
      "url": "https://mcp.docfork.com/mcp"
    },
    "firecrawl-mcp": {
      "type": "http",
      "url": "https://mcp.firecrawl.dev/${input:firecrawlApiKey}/v2/mcp"
    },
    "mcp-google-cse": {
      "command": "uvx",
      "args": ["mcp-google-cse"],
      "env": {
        "API_KEY": "${input:googleSearchApiKey}",
        "ENGINE_ID": "${input:googleSearchEngineID}"
      }
    },
    "nixos": {
      "command": "mcp-nixos"
    },
    "Ref": {
      "type": "http",
      "url": "https://api.ref.tools/mcp?apiKey=${input:refApiKey}"
    },
    "svelte": {
      "type": "http",
      "url": "https://mcp.svelte.dev/mcp"
    },
    "tavily": {
      "type": "http",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey=${input:tavilyApiKey}"
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "context7ApiKey",
      "description": "Context7 API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "firecrawlApiKey",
      "description": "Firecrawl API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "googleSearchApiKey",
      "description": "Google Search API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "googleSearchEngineID",
      "description": "Google Search Engine ID",
      "password": true
    },
    {
      "type": "promptString",
      "id": "refApiKey",
      "description": "Ref API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "tavilyApiKey",
      "description": "Tavily API Key",
      "password": true
    }
  ]
}
